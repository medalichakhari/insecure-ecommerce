# E-commerce Demo Application Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@db:5432/ecommerce

# Backend Server Configuration
PORT=4000
NODE_ENV=production

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# IMPORTANT: Vulnerability Testing Mode
# Set to "true" to enable intentional security vulnerabilities for testing
# Set to "false" for secure operation (recommended for production)
VULN_MODE=false

# Additional Security Settings (when VULN_MODE=false)
CORS_ORIGIN=http://localhost:3000
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_VALIDATION=true

# File Upload Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Session Configuration (if implementing user sessions)
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT_MINUTES=30

# Development Settings
# Only used in development mode
DEV_AUTO_RELOAD=true
DEV_SHOW_STACK_TRACES=true

# ⚠️  SECURITY NOTICE ⚠️
# This application contains intentional vulnerabilities when VULN_MODE=true
# Only enable vulnerability mode for authorized security testing
# Never use VULN_MODE=true in production environments
# Only test on systems you own or have explicit permission to test